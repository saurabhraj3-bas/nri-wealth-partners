# NRI Wealth Partners - Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================================================
# EXISTING CONFIGURATION
# ============================================================================

# Gmail SMTP (for contact forms and webinar registration emails)
GMAIL_USER=saurabh@nriwealthpartners.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# Contact email recipient
CONTACT_EMAIL=saurabh@nriwealthpartners.com

# Google AI (Gemini) for chatbot
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Google Sheets (if using sheets integration)
GOOGLE_SHEETS_ID=your_google_sheets_id_here
GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key_here

# ============================================================================
# NEW - NEWSLETTER SYSTEM
# ============================================================================

# Firebase Admin SDK (get from Firebase Console â†’ Service Accounts)
# This should be the entire JSON object from your service account key file
FIREBASE_ADMIN_KEY={"type":"service_account","project_id":"nri-wealth-partners","private_key_id":"...","private_key":"...","client_email":"..."}

# NextAuth Secret (generate with: openssl rand -base64 32)
# This is used to encrypt JWT tokens for admin sessions
NEXTAUTH_SECRET=your_nextauth_secret_here

# Admin Password (MVP - simple password for admin login)
# TODO: Replace with proper Firebase Authentication later
# This is the password used to log in at /admin/login
ADMIN_PASSWORD=your_secure_admin_password_here

# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================

# Node environment
NODE_ENV=development

# Next.js telemetry
NEXT_TELEMETRY_DISABLED=1
